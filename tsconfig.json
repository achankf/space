{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "outDir": "build",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "target",
    "build",
    "dist",
    "**/*.test.ts",
    "lib",
    "lib/*.d.ts",
    "lib/*",
    "**/*.wasm",
    "node_modules"
  ],
}